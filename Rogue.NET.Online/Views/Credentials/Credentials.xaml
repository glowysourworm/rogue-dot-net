<UserControl x:Class="Rogue.NET.Online.Credentials"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Foreground="White" Background="Black"
             mc:Ignorable="d">
    <StackPanel Margin="10">
        <TextBlock Text="Upload Your Game Stats! (Your Credentials are Encrypted)" FontSize="14" Margin="8" />                   
        <Grid Margin="8">
            <TextBlock Text="User Name:  " Margin="0, 0, 100, 0" />
            <TextBox x:Name="UserTB" Margin="108, 0, 0, 0" />
        </Grid>
        <Grid Margin="8">
            <TextBlock Text="Password:  " Margin="0, 0, 100, 0" />
            <PasswordBox PasswordChar="*" x:Name="PassTB" Margin="108, 0, 0, 0" />
        </Grid>        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button IsCancel="True" Height="24" Width="72" HorizontalAlignment="Right" Margin="8" Content="No Thanks!" />
            <Button IsDefault="True" Click="OkButton_Click" Height="24" Width="72" HorizontalAlignment="Right" Margin="8" Content="Upload!" />
        </StackPanel>
    </StackPanel>
</UserControl>
