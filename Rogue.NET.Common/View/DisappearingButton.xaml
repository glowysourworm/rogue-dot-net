<UserControl x:Class="Rogue.NET.Common.View.DisappearingButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Dictionaries/ShinyButton.xaml" />
    </UserControl.Resources>
    <Button x:Name="TheButton" 
            Style="{StaticResource ShinyButtonStyle}"
            Click="TheButton_Click"
            Cursor="Hand" 
            Background="Black" 
            BorderBrush="White" />
</UserControl>
