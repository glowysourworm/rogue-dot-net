<UserControl x:Class="Rogue.NET.Common.View.ValueBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Canvas x:Name="ValueCanvas">
        <Rectangle x:Name="ValueBackgroundRectangle" Width="{Binding Width, ElementName=ValueCanvas}" Opacity="1" Fill="{Binding ValueBackground}" />
        <Rectangle x:Name="ValueRectangle" Opacity="0.7" Fill="{Binding ValueForeground}" Stroke="{Binding ValueBorder}" StrokeThickness="1" />
    </Canvas>
</UserControl>
