<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate DataType="ListBoxItem" x:Key="ListBoxTitleItemTemplate">
        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Tag}" Foreground="{Binding Foreground}" VerticalAlignment="Center" HorizontalAlignment="Left" />
            <ContentPresenter Content="{Binding}" Grid.Column="1" HorizontalAlignment="Stretch" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>
