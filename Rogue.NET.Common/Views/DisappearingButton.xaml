<UserControl x:Class="Rogue.NET.Common.Views.DisappearingButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resources/Dictionaries/ShinyButton.xaml" />
    </UserControl.Resources>
    <Button x:Name="TheButton" 
            Style="{StaticResource ShinyButtonStyle}"
            Click="TheButton_Click"
            Cursor="Hand" 
            Background="Black" 
            BorderBrush="White" />
</UserControl>
