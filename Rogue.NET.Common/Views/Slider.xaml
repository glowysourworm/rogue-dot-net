<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" 
             x:Class="Rogue.NET.Common.Views.Slider"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition x:Name="ValueColumn" Width="80"/>
        </Grid.ColumnDefinitions>
        <Slider x:Name="TheSlider" VerticalAlignment="Center" Grid.Column="0" Minimum="{Binding SliderMin}" Maximum="{Binding SliderMax}" SmallChange="{Binding SliderSmallChange}" LargeChange="{Binding SliderLargeChange}" Margin="2" Cursor="Hand" Height="16" />
        <TextBlock x:Name="SliderTextBlock" Grid.Column="1" Text="{Binding SliderValue}" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="18" />
    </Grid>
</UserControl>
