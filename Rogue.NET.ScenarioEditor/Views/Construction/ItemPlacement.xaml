<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Construction.ItemPlacement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="Black"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Rogue.NET.ScenarioEditor;component/Resources/Dictionaries/PlacementListBox.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock Text="Consumable Item Placement" Foreground="White" FontSize="18" VerticalAlignment="Center" Margin="8" />

        <ListBox HorizontalContentAlignment="Stretch" ItemsSource="{Binding ConsumableTemplates}"  ItemTemplate="{DynamicResource PlacementItemTemplate}" Grid.Row="1" Background="Black" />

        <TextBlock Text="Equipment Item Placement" Foreground="White" FontSize="18" VerticalAlignment="Center" Margin="8" />

        <ListBox HorizontalContentAlignment="Stretch" ItemsSource="{Binding EquipmentTemplates}"  ItemTemplate="{DynamicResource PlacementItemTemplate}" Grid.Row="1" Background="Black" />

    </Grid>
</UserControl>
