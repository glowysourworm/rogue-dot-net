<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Assets.Equipment.EquipmentMetadata"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="Black"
             d:DesignHeight="300" d:DesignWidth="500">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBox">
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource NormalBorderBrush}" />
                <Setter Property="Background" Value="{DynamicResource LightBrush}"/>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="White" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel Grid.Column="1">
            <Grid Margin="10">
                <TextBlock Text="Short Description" />
                <TextBox Text="{Binding ShortDescription}" HorizontalAlignment="Right" Width="250" />
            </Grid>
            <Grid Margin="10">
                <TextBlock Text="Long Description" />
                <TextBox Text="{Binding LongDescription}" HorizontalAlignment="Right" Width="250" />
            </Grid>
            <Grid Margin="10">
                <TextBlock Text="Is Cursed" />
                <CheckBox IsChecked="{Binding IsCursed}" HorizontalAlignment="Right" />
            </Grid>
            <Grid Margin="10">
                <TextBlock Text="Is Unique" />
                <CheckBox IsChecked="{Binding IsUnique}" HorizontalAlignment="Right" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
