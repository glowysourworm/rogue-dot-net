<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Assets.SharedControl.AlterationControl.EffectControl.RemedyEffectParameters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Black">

    <!-- Altered State -->
    <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch">
        <TextBlock Text="Remedied (Altered) State" Foreground="White" HorizontalAlignment="Left" />
        <ComboBox x:Name="RemediedStateCB" 
                   SelectedItem="{Binding RemediedState}"
                   SelectedValue="{Binding RemediedState.Name}"
                   SelectedValuePath="Name"
                   DisplayMemberPath="Name" 
                   HorizontalAlignment="Right" Height="24"  Width="250" />
    </Grid>
</UserControl>
