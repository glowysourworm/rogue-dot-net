<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Assets.SharedControl.AlterationControl.EffectControl.TemporaryEffectParameters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Rogue.NET.ScenarioEditor.Views.Controls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Dictionaries/ButtonSpinner.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Core;component/Resource/Converter.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <TabControl TabStripPlacement="Left" Background="Black">
        <TabItem Header="General">
            <StackPanel>
                <!-- Event Time -->
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Event Time" />
                    <controls:Range DataContext="{Binding EventTime}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                
                <!-- Altered State -->
                <Grid Margin="10,5,10,5">
                    <TextBlock Text="Altered Character State" Foreground="White" />
                    <ComboBox x:Name="AlteredStateCB" 
                              SelectedItem="{Binding AlteredState}"
                              SelectedValue="{Binding AlteredState.Name}"
                              SelectedValuePath="Name"
                              DisplayMemberPath="Name" 
                              HorizontalAlignment="Right" Height="24"  Width="250" />
                </Grid>
                
                <!-- Can See Invisible -->
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Can See Invisible Characters" />
                    <CheckBox IsChecked="{Binding CanSeeInvisibleCharacters}" HorizontalAlignment="Right" />
                </Grid>
                
                <!-- Is Stackable-->
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Is Stackable" />
                    <CheckBox IsChecked="{Binding IsStackable}" HorizontalAlignment="Right" />
                </Grid>                
            </StackPanel>
        </TabItem>
        <TabItem Header="Parameters">
            <StackPanel>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Strength" />
                    <controls:Range DataContext="{Binding StrengthRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Agility" />
                    <controls:Range DataContext="{Binding AgilityRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Intelligence" />
                    <controls:Range DataContext="{Binding IntelligenceRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Speed" />
                    <controls:Range DataContext="{Binding SpeedRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Light Radius" />
                    <controls:Range DataContext="{Binding LightRadiusRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Food Usage Per Turn" />
                    <controls:Range DataContext="{Binding FoodUsagePerTurnRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Hp Per Step" />
                    <controls:Range DataContext="{Binding HpPerStepRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Mp Per Step" />
                    <controls:Range DataContext="{Binding MpPerStepRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Attack" />
                    <controls:Range DataContext="{Binding AttackRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Defense" />
                    <controls:Range DataContext="{Binding DefenseRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Mental Block Probability" />
                    <controls:Range DataContext="{Binding MentalBlockProbabilityRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Dodge Probability" />
                    <controls:Range DataContext="{Binding DodgeProbabilityRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Experience" />
                    <controls:Range DataContext="{Binding ExperienceRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>

                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Hunger" />
                    <controls:Range DataContext="{Binding HungerRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>

                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Mp" />
                    <controls:Range DataContext="{Binding MpRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>

                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Hp" />
                    <controls:Range DataContext="{Binding HpRange}" Width="300" HorizontalAlignment="Right" />
                </Grid>

                <Grid Margin="10,5,10,5">
                    <TextBlock Foreground="White" Text="Critical Hit" />
                    <controls:Range DataContext="{Binding CriticalHit}" Width="300" HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>
        </TabItem>
        <TabItem Header="Symbol">
            <StackPanel Background="Black">
                <TextBlock Margin="8" FontSize="18" HorizontalAlignment="Left"
                           Text="This symbol change accompanies this temporary effect" />
                <controls:SymbolEditor SymbolDeltaMode="True" DataContext="{Binding SymbolAlteration}" />
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>
