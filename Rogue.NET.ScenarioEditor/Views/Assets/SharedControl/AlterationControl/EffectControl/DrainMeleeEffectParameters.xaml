<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Assets.SharedControl.AlterationControl.EffectControl.DrainMeleeEffectParameters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Rogue.NET.ScenarioEditor.Views.Controls">
    <StackPanel>
        <Grid Margin="10,5,10,5">
            <TextBlock Foreground="White" Text="Hp" FontSize="16" HorizontalAlignment="Left" />
            <controls:Range DataContext="{Binding Hp}" LowLimit="0" HighLimit="20" Width="300" HorizontalAlignment="Right" />
        </Grid>
        <Grid Margin="10,5,10,5">
            <TextBlock Foreground="White" Text="Mp" FontSize="16" HorizontalAlignment="Left" />
            <controls:Range DataContext="{Binding Mp}" LowLimit="0" HighLimit="20" Width="300" HorizontalAlignment="Right" />
        </Grid>
    </StackPanel>
</UserControl>
