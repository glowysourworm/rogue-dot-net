<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Assets.SharedControl.AlterationControl.CommonControl.AlterationEffectChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Height="48">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Alteration Effect Type" FontSize="18" Foreground="White" Margin="10" HorizontalAlignment="Left" />

        <ComboBox x:Name="EffectTypeCB"
                      Margin="10, 0"
                      Grid.Column="1"
                      Width="250"
                      HorizontalAlignment="Right" />

        <Button x:Name="OkButton"
                    Margin="10, 10"
                    Grid.Column="2"
                    Content="Apply"
                    Click="OkButton_Click" />
    </Grid>
</UserControl>
