<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Assets.AnimationControl.AnimationBarrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="Black">
    <Grid>
            <StackPanel Margin="10">
                <RadioButton x:Name="SelfRB" Height="48" Tag="Aura" Foreground="White" Background="Black">
                    <RadioButton.Content>
                        <TextBlock  TextWrapping="Wrap"
                                    Text="Self (Focus is on spell caster)" />
                    </RadioButton.Content>
                </RadioButton>
                <RadioButton x:Name="TargetRB" Height="48" Tag="Barrage" Foreground="White" Background="Black">
                    <RadioButton.Content>
                        <TextBlock  TextWrapping="Wrap"
                                    Text="Target (Focus is on target of spell)" />
                    </RadioButton.Content>
                </RadioButton>
        </StackPanel>
    </Grid>
</UserControl>
