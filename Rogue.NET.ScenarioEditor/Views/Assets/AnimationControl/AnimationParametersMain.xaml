<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Assets.AnimationControl.AnimationParametersMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpftoolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             Background="Black">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Dictionaries/ButtonSpinner.xaml" />
    </UserControl.Resources>
    <Grid>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
                <Grid Height="36">
                    <TextBlock FontSize="14" Foreground="White" Text="Animation Time (ms)" VerticalAlignment="Center" />
                <wpftoolkit:IntegerUpDown Value="{Binding AnimationTime}" AllowTextInput="True" AllowSpin="True" FormatString="N0" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Height="28" Width="100" />
                </Grid>
                <Grid Height="36" Grid.Row="1">
                    <TextBlock FontSize="14" Foreground="White" Text="Repeat Count" VerticalAlignment="Center" />
                <wpftoolkit:IntegerUpDown Value="{Binding RepeatCount}" AllowTextInput="True" AllowSpin="True" FormatString="N0" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Height="28" Width="100" />
                </Grid>
                <Grid Height="36" Grid.Row="2">
                    <TextBlock FontSize="14" Foreground="White" Text="Border Thickness" VerticalAlignment="Center" />
                <wpftoolkit:DoubleUpDown Value="{Binding StrokeThickness}" AllowTextInput="True" AllowSpin="True" FormatString="F2" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Height="28" Width="100" />
                </Grid>
                <Grid Height="36" Grid.Row="3">
                    <TextBlock FontSize="14" Foreground="White" Text="Opacity Start" VerticalAlignment="Center" />
                <wpftoolkit:DoubleUpDown Value="{Binding Opacity1}" AllowTextInput="True" AllowSpin="True" FormatString="F2" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Height="28" Width="100" />
                </Grid>
                <Grid Height="36" Grid.Row="4">
                    <TextBlock FontSize="14" Foreground="White" Text="Height Start" VerticalAlignment="Center" />
                <wpftoolkit:DoubleUpDown Value="{Binding Height1}" AllowTextInput="True" AllowSpin="True" FormatString="N0" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Height="28" Width="100" />
                </Grid>
                <Grid Height="36" Grid.Row="5">
                    <TextBlock FontSize="14" Foreground="White" Text="Width Start" VerticalAlignment="Center" />
                <wpftoolkit:DoubleUpDown Value="{Binding Width1}" AllowTextInput="True" AllowSpin="True" FormatString="N0" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Height="28" Width="100" />
                </Grid>
                <Grid Height="36" Grid.Row="6">
                    <TextBlock FontSize="14" Foreground="White" Text="Height End" VerticalAlignment="Center" />
                <wpftoolkit:DoubleUpDown Value="{Binding Height2}" AllowTextInput="True" AllowSpin="True" FormatString="N0" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Height="28" Width="100" />
                </Grid>
                <Grid Height="36" Grid.Row="7">
                    <TextBlock FontSize="14" Foreground="White" Text="Width End" VerticalAlignment="Center" />
                <wpftoolkit:DoubleUpDown Value="{Binding Width2}" AllowTextInput="True" AllowSpin="True" FormatString="N0" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Height="28" Width="100" />
                </Grid>
                <Grid Height="36" Grid.Row="8">
                    <TextBlock FontSize="14" Foreground="White" Text="Opacity End" VerticalAlignment="Center" />
                <wpftoolkit:DoubleUpDown Value="{Binding Opacity2}" AllowTextInput="True" AllowSpin="True" FormatString="F2" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Height="28" Width="100" />
                </Grid>
                <Grid Height="36" Grid.Row="9">
                    <TextBlock FontSize="14" Foreground="White" Text="Auto Reverse" VerticalAlignment="Center" />
                    <CheckBox IsChecked="{Binding AutoReverse}" VerticalAlignment="Center" HorizontalAlignment="Right" />
                </Grid>
            <Grid Height="36" Grid.Row="10">
                <TextBlock FontSize="14" Foreground="White" Text="Ellipse Color" VerticalAlignment="Center" />
                <ComboBox x:Name="ColorCB" Width="200"
                          SelectedItem="{Binding FillTemplate, Mode=TwoWay}"
                          SelectedValue="{Binding FillTemplate.Name}"
                          SelectedValuePath="Name"
                          DisplayMemberPath="Name"
                          VerticalAlignment="Center" HorizontalAlignment="Right" />
            </Grid>
            <Grid Height="36" Grid.Row="11">
                <TextBlock FontSize="14" Foreground="White" Text="Ellipse Outline" VerticalAlignment="Center" />
                <ComboBox x:Name="OutlineCB" Width="200"     
                          SelectedItem="{Binding StrokeTemplate, Mode=TwoWay}"
                          SelectedValue="{Binding StrokeTemplate.Name}"
                          SelectedValuePath="Name"
                          DisplayMemberPath="Name"
                          VerticalAlignment="Center" HorizontalAlignment="Right" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
