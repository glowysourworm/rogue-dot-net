<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Assets.Brush"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:brushEditor="clr-namespace:Lovatts.ColorEditor;assembly=Lovatts.ColorEditor">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid>
        <StackPanel>
            <Border Padding="10" BorderBrush="White" BorderThickness="0,0,0,1">
                <TextBlock Text="Brush Editor" FontSize="18" Foreground="White" />
            </Border>
            <brushEditor:BrushEditor x:Name="BrushEditor" />
        </StackPanel>
    </Grid>
    </ScrollViewer>
</UserControl>
