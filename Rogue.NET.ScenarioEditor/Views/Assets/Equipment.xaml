<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Assets.Equipment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:equipment="clr-namespace:Rogue.NET.ScenarioEditor.Views.Assets.EquipmentControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Symbol">
                <equipment:EquipmentSymbol />
            </TabItem>
            <TabItem Header="Rogue-Encyclopedia Entry">
                <equipment:EquipmentMetadata />
            </TabItem>
            <TabItem Header="Equipment Effect">
                <equipment:EquipmentSpellSelection />
            </TabItem>
            <TabItem Header="Parameters">
                <ContentControl prism:RegionManager.RegionName="EquipmentParametersRegion" />
            </TabItem>
            <TabItem Header="Combat Attributes">
                <equipment:EquipmentCombatAttributes />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
