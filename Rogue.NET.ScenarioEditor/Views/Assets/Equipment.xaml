<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Assets.Equipment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:region="clr-namespace:Rogue.NET.Common.Extension.Prism.RegionManager;assembly=Rogue.NET.Common"
             xmlns:equipment="clr-namespace:Rogue.NET.ScenarioEditor.Views.Assets.EquipmentControl">
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Symbol">
                <equipment:EquipmentSymbol />
            </TabItem>
            <TabItem Header="Rogue-Encyclopedia Entry">
                <equipment:EquipmentMetadata />
            </TabItem>
            <TabItem Header="Equipment Alteration Selection">
                <equipment:EquipmentAlterationSelection />
            </TabItem>
            <TabItem Header="Parameters">
                <region:RogueRegion region:RogueRegionManager.DefaultViewType="{x:Type equipment:EquipmentParameters}" />
            </TabItem>
            <TabItem Header="Attack Alteration">
                <equipment:EquipmentAttackAlterationControl />
            </TabItem>
            <TabItem Header="Equip Alteration">
                <equipment:EquipmentEquipAlterationControl />
            </TabItem>
            <TabItem Header="Curse Alteration">
                <equipment:EquipmentCurseAlterationControl />
            </TabItem>
            <TabItem Header="Attack Attributes">
                <equipment:EquipmentAttackAttributes />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
