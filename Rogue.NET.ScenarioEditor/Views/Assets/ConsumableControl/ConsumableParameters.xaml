<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Assets.ConsumableControl.ConsumableParameters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:coreModelEnums="clr-namespace:Rogue.NET.Core.Model.Enums;assembly=Rogue.NET.Core"
             xmlns:toolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:controls="clr-namespace:Rogue.NET.ScenarioEditor.Views.Controls"
             mc:Ignorable="d" Background="Black" FontSize="14"
             d:DesignHeight="500" d:DesignWidth="550">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Dictionaries/ButtonSpinner.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Core;component/Resource/Converter.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>    
    <Grid>
        <StackPanel>
            <Grid Margin="10">
                <TextBlock HorizontalAlignment="Left" Foreground="White" Text="Weight" VerticalAlignment="Center" />
                <toolkit:DoubleUpDown HorizontalAlignment="Right" FormatString="F2" Value="{Binding Weight, Mode=TwoWay}" AllowTextInput="True" AllowSpin="True" Minimum="0" Maximum="100" Increment="0.1" Height="24" Width="400"  Grid.Column="1" Grid.Row="2" />
            </Grid>
            <Grid Margin="10">
                <TextBlock HorizontalAlignment="Left" Foreground="White" Text="Required Level" VerticalAlignment="Center" />
                <toolkit:IntegerUpDown HorizontalAlignment="Right" Value="{Binding LevelRequired, Mode=TwoWay}" AllowTextInput="True" AllowSpin="True" Minimum="0" Maximum="100" Height="24" Width="400"  Grid.Column="1" Grid.Row="2" />
            </Grid>            
            <Grid Margin="10">
                <TextBlock Grid.Row="4" Foreground="White" Text="Use Count" VerticalAlignment="Center" />
                <controls:Range HorizontalAlignment="Right" DataContext="{Binding UseCount, Mode=TwoWay}" Height="24" Width="400" Grid.Column="1" Grid.Row="4" />
            </Grid>
            <Grid Margin="10">
                <TextBlock Grid.Row="4" Foreground="White" Text="Identify On Use" VerticalAlignment="Center" />
                <CheckBox HorizontalAlignment="Right" VerticalAlignment="Center" IsChecked="{Binding IdentifyOnUse}" />
            </Grid>            
            <Grid Margin="10" Visibility="{Binding HasSpell, Converter={StaticResource BoolVisibilityCollapseConverter}, Mode=TwoWay}">
                <TextBlock Grid.Row="5" Foreground="White" Text="Spell" VerticalAlignment="Center" />
                <ComboBox x:Name="SpellCB" 
                          SelectedItem="{Binding SpellTemplate}" 
                          SelectedValue="{Binding SpellTemplate.Name}"
                          SelectedValuePath="Name"
                          DisplayMemberPath="Name" 
                          HorizontalAlignment="Right" Height="24"  Width="400"  />
            </Grid>

            <Grid Margin="10">
                <TextBlock Foreground="White" Text="Has Religious Affiliation" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding HasReligiousAffiliationRequirement}" VerticalAlignment="Center" HorizontalAlignment="Right" />
            </Grid>
            <Grid Margin="10"
                      Visibility="{Binding HasReligiousAffiliationRequirement, Converter={StaticResource BoolVisibilityCollapseConverter}}">
                <TextBlock Foreground="White" Text="Religious Affiliation" VerticalAlignment="Top" HorizontalAlignment="Left" />
                <ComboBox x:Name="ReligionCB" DisplayMemberPath="Name"
                                  SelectedItem="{Binding ReligiousAffiliationRequirement.Religion}"
                                  VerticalAlignment="Center" 
                                  Width="200"                              
                                  HorizontalAlignment="Right" />
            </Grid>
            <Grid Margin="10"
                      Visibility="{Binding HasReligiousAffiliationRequirement, Converter={StaticResource BoolVisibilityCollapseConverter}}">
                <TextBlock Foreground="White" Text="Required Affiliation Level" VerticalAlignment="Top" HorizontalAlignment="Left" />
                <toolkit:DoubleUpDown Value="{Binding ReligiousAffiliationRequirement.RequiredAffiliationLevel}" 
                                              Minimum="0.1"
                                              Maximum="1"
                                              Increment="0.1"
                                              Width="80"
                                              HorizontalAlignment="Right" />
            </Grid>

            <Grid Margin="10" Visibility="{Binding SubType, Converter={StaticResource ParameterVisibilityCollapsedConverter}, ConverterParameter={x:Static coreModelEnums:ConsumableSubType.Note}}">
                <TextBlock Text="Note Message" Foreground="White" VerticalAlignment="Center" />
                <TextBox Text="{Binding NoteMessage}" 
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource NormalBorderBrush}"
                         Background="{DynamicResource LightBrush}"
                         HorizontalAlignment="Right" 
                         AcceptsReturn="True"
                         HorizontalScrollBarVisibility="Disabled"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         Height="100"
                         Width="400" />
            </Grid>

            <Grid Margin="10" Visibility="{Binding IsProjectile, Converter={StaticResource BoolVisibilityCollapseConverter}, Mode=TwoWay}">
                <TextBlock Grid.Row="5" Foreground="White" Text="Projectile Spell" VerticalAlignment="Center" />
                <ComboBox x:Name="ProjectileSpellCB" 
                          SelectedItem="{Binding ProjectileSpellTemplate}" 
                          SelectedValue="{Binding ProjectileSpellTemplate.Name}"
                          SelectedValuePath="Name"                          
                          DisplayMemberPath="Name" HorizontalAlignment="Right" Height="24"  Width="400"  />
            </Grid>
            <Grid Margin="10" Visibility="{Binding HasLearnedSkill, Converter={StaticResource BoolVisibilityCollapseConverter}, Mode=TwoWay}">
                <TextBlock Grid.Row="7" Foreground="White" Text="Learned Skill" VerticalAlignment="Center" />
                <ComboBox x:Name="LearnedSkillCB" 
                          SelectedItem="{Binding LearnedSkill}" 
                          SelectedValue="{Binding LearnedSkill.Name}"
                          SelectedValuePath="Name"                          
                          DisplayMemberPath="Name" HorizontalAlignment="Right" Height="24"  Width="400"  />
            </Grid>
            <Grid Margin="10" Visibility="{Binding SubType, Converter={StaticResource ParameterVisibilityCollapsedConverter}, ConverterParameter={x:Static coreModelEnums:ConsumableSubType.Ammo}}">
                <TextBlock Grid.Row="8" Foreground="White" Text="Ammo Spell" VerticalAlignment="Center" />
                <ComboBox x:Name="AmmoSpellCB" 
                          SelectedItem="{Binding AmmoSpellTemplate}" 
                          SelectedValue="{Binding AmmoSpellTemplate.Name}"
                          SelectedValuePath="Name"                          
                          DisplayMemberPath="Name" HorizontalAlignment="Right" Height="24"  Width="400"  />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>


    