<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Controls.ImageEnumComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <ComboBox x:Name="TheComboBox" SelectionChanged="TheComboBox_SelectionChanged"
                  HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Grid Background="Transparent">
                        <Image Width="24" Height="24" HorizontalAlignment="Left" Source="{Binding ImageSrc}"/>
                        <TextBlock HorizontalAlignment="Right" Margin="8,0" VerticalAlignment="Center" Foreground="White" Text="{Binding Text}" TextWrapping="Wrap"/>
                    </Grid>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</UserControl>
