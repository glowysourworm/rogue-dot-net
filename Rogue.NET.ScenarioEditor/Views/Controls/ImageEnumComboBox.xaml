<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:Rogue.NET.Common.Views;assembly=Rogue.NET.Common"
             xmlns:enums="clr-namespace:Rogue.NET.Common;assembly=Rogue.NET.Common"
             xmlns:local="clr-namespace:Rogue.NET.ScenarioEditor"      
             xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" 
             x:Class="Rogue.NET.ScenarioEditor.Views.Controls.ImageEnumComboBox">
    <Grid>
        <ComboBox x:Name="TheComboBox" SelectionChanged="TheComboBox_SelectionChanged"
                  HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Grid Background="Transparent">
                        <Image Width="24" Height="24" HorizontalAlignment="Left" Source="{Binding ImageSrc}"/>
                        <TextBlock HorizontalAlignment="Right" Margin="8,0" VerticalAlignment="Center" Foreground="White" Text="{Binding Text}" TextWrapping="Wrap"/>
                    </Grid>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</UserControl>
