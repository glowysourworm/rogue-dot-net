<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Controls.Symbol.SymbolComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ComboBox x:Name="TheCB" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <Grid Background="Transparent" HorizontalAlignment="Stretch">
                    <Image Source="{Binding ImageSource}" HorizontalAlignment="Left" Height="30" Width="20" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding Symbol}" HorizontalAlignment="Right" Foreground="White" FontSize="16" VerticalAlignment="Center" />
                </Grid>
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</UserControl>
