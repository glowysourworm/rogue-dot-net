<UserControl x:Class="Rogue.NET.ScenarioEditor.Views.Controls.ListBuilder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rogue.NET.ScenarioEditor.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <DataTemplate x:Key="ProbabilityItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding TheTemplate.Name}" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4" />
                <Slider Grid.Column="1" Margin="4" Minimum="0" Maximum="1" Value="{Binding GenerationProbability, Mode=TwoWay}" />
                <TextBlock Text="{Binding GenerationProbability, StringFormat=F2}" Grid.Column="2" Foreground="White" VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="ProbabilityEquipmentTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding TheTemplate.Name}" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4" />
                <Slider Grid.Column="1" Margin="4" Minimum="0" Maximum="1" Value="{Binding GenerationProbability, Mode=TwoWay}" />
                <TextBlock Text="{Binding GenerationProbability, StringFormat=F2}" Grid.Column="2" Foreground="White" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding EquipOnStartup, Mode=TwoWay}" Content="Equip On Startup" Grid.Column="3" Foreground="White" VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>        
        <DataTemplate x:Key="ItemTemplate">
            <Grid>
                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="12" VerticalAlignment="Center" Margin="2" HorizontalAlignment="Left" />
            </Grid>
        </DataTemplate>
        <local:ListBuilderTemplateSelector x:Key="ProbabilityTemplateSelector" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="32" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListBox x:Name="SourceLB" />
        <Button x:Name="AddButton" Click="AddButton_Click" FontFamily="{StaticResource FontAwesome}" Content="&#xf04e;" FontSize="11" Grid.Column="1" VerticalAlignment="Top" Margin="5,0,5,5" Height="24" />
        <Button x:Name="RemoveButton" Click="RemoveButton_Click" FontFamily="{StaticResource FontAwesome}" Content="&#xf04a;" FontSize="11" Grid.Column="1" VerticalAlignment="Bottom" Margin="5,5,5,0" Height="24" />
        <ListBox x:Name="DestinationLB" ItemTemplateSelector="{StaticResource ProbabilityTemplateSelector}" Grid.Column="2" />
    </Grid>
</UserControl>
