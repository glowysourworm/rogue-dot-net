<ComboBox x:Class="Rogue.NET.ScenarioEditor.Views.Controls.ColorComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             SelectedValuePath="ColorString"
             HorizontalContentAlignment="Stretch">
    <ComboBox.ItemTemplate>
        <DataTemplate>
            <Grid Background="Transparent" HorizontalAlignment="Stretch">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Name}" />
                <Rectangle Width="36" HorizontalAlignment="Right" Fill="{Binding Brush}" />
            </Grid>
        </DataTemplate>
    </ComboBox.ItemTemplate>
</ComboBox>
