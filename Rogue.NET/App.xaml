<Application x:Class="Rogue.NET.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" 
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ec="http://schemas.microsoft.com/expression/2010/controls">
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <!-- Simple and clean looking with a slight renaissance look -->
                    <FontFamily x:Key="CentaurFont">/Rogue.NET.Common;Component/Resources/Fonts/CENTAUR.TTF#Centaur</FontFamily>

                    <!-- Fancy Text - Renaissance Faire (maybe good for special dialog boxes) -->
                    <FontFamily x:Key="ILShakeFestFont">/Rogue.NET.Common;Component/Resources/Fonts/ILShakeFest.ttf#ILShakeFest</FontFamily>

                    <!-- Font Awesome -->
                    <FontFamily x:Key="FontAwesome">/Rogue.NET.Common;Component/Resources/Fonts/fontawesome-webfont.ttf#FontAwesome</FontFamily>


                    <Style x:Key="SplashWindowStyle" TargetType="Window">
                        <Style.Setters>
                            <Setter Property="WindowStyle" Value="None"/>
                            <Setter Property="Topmost" Value="True"/>
                            <Setter Property="ShowInTaskbar" Value="False"/>
                            <Setter Property="ResizeMode" Value="NoResize"/>
                        </Style.Setters>
                    </Style>

                </ResourceDictionary>
                
                <!-- Themes included in WPF toolkit -->
                <ResourceDictionary Source="Themes/ExpressionDark.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
