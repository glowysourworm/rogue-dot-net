<UserControl x:Class="Rogue.NET.View.OpenScenarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             Style="{StaticResource SplashWindowStyle}"
             Height="100" Width="200">
    <Border BorderBrush="White" Background="Black" BorderThickness="4" CornerRadius="10">
        <Grid>
            <TextBlock Text="Loading Scenario..." Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        </Grid>
    </Border>
</UserControl>
