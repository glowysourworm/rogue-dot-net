<UserControl      x:Class="Rogue.NET.View.EnchantArmorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:region="clr-namespace:Rogue.NET.Common.Extension.Prism.RegionManager;assembly=Rogue.NET.Common"
             xmlns:itemGrid="clr-namespace:Rogue.NET.Scenario.Content.Views.ItemGrid;assembly=Rogue.NET.Scenario"
             Width="500" Height="300" Background="Transparent" Opacity="1">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Dictionaries/ShinyTextButton.xaml" />
    </UserControl.Resources>
    <Border BorderBrush="White" Background="Black" BorderThickness="2" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <region:RogueRegion x:Name="ItemGridControl" Margin="10" 
                                region:RogueRegionManager.RegionName="EnchantArmorItemGridRegion"
                                region:RogueRegionManager.DefaultViewType="{x:Type }">
            </region:RogueRegion>
        </Grid>
    </Border>
</UserControl>
