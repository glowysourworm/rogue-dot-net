<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Rogue.NET.Common.Control;assembly=Rogue.NET.Common"
             x:Class="Rogue.NET.View.ObjectiveView" 
             Background="Transparent"
             mc:Ignorable="d" 
             Foreground="#FFFFEB8E">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Dictionaries/ShinyTextButton.xaml" />
    </UserControl.Resources>
    <Border BorderBrush="#FFFFF5D1" BorderThickness="1" Background="Black" CornerRadius="10">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" MinHeight="42"/>
				<RowDefinition Height="Auto" MinHeight="81.012"/>
				<RowDefinition MinHeight="300"/>
                <RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<StackPanel HorizontalAlignment="Center" Margin="8,0" Orientation="Horizontal">
				<TextBlock Margin="0" TextWrapping="Wrap" Text="{Binding Player.RogueName}" VerticalAlignment="Center" FontSize="21.333" Foreground="#FFFFD08A"/>
				<TextBlock TextWrapping="Wrap" Text=" - Scenario Objective" VerticalAlignment="Center" Margin="0" FontSize="21.333" Foreground="#FFFFD08A"/>
			</StackPanel>
			<Border Margin="12" Grid.Row="2" BorderThickness="0.5" CornerRadius="4" >
				<Border.BorderBrush>
					<LinearGradientBrush EndPoint="1,0.514" StartPoint="0.005,0.494">
						<GradientStop Color="#FFE0DEFF" Offset="0"/>
						<GradientStop Color="#FFD6D3FF" Offset="1"/>
						<GradientStop Color="#00878787" Offset="0.528"/>
					</LinearGradientBrush>
				</Border.BorderBrush>

                <controls:SpinPanel x:Name="ObjectivePanel" ObjectCentered="ObjectivePanel_ObjectCentered" Padding="24,12,12,12" FontSize="14"/>
			</Border>
			<Border Margin="12" Grid.Row="1" BorderThickness="0.5" CornerRadius="4" Padding="8" >
				<Border.BorderBrush>
					<LinearGradientBrush EndPoint="1,0.514" StartPoint="0.005,0.494">
						<GradientStop Color="#FFE0DEFF" Offset="0"/>
						<GradientStop Color="#FFD6D3FF" Offset="1"/>
						<GradientStop Color="#00878787" Offset="0.528"/>
					</LinearGradientBrush>
				</Border.BorderBrush>
				<TextBlock TextWrapping="Wrap" Text="{Binding ObjectiveDescription}" FontSize="16" Foreground="#FFFFF3D2"/>
            
			</Border>
            <Button Content="Back" Click="BackButton_Click" Cursor="Hand"
                    Style="{DynamicResource ShinyTextButtonStyle}" 
                    HorizontalAlignment="Right" Margin="12" 
                    VerticalAlignment="Top" Width="70" Height="36"
                    Background="Black"
                    Foreground="White"
                    Grid.Row="3"
                    Tag="OK"/>
        </Grid>
	</Border>
</UserControl>
