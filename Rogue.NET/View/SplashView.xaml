<UserControl x:Class="Rogue.NET.View.SplashView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:Rogue.NET.Common.View;assembly=Rogue.NET.Common" 
             xmlns:coreView="clr-namespace:Rogue.NET.Core.View;assembly=Rogue.NET.Core"
             Background="Transparent" 
             FontFamily="{StaticResource CentaurFont}"
             Height="220" Width="300" >
    <Border Background="Black" BorderBrush="Gray" BorderThickness="2" CornerRadius="10">
        <Grid Background="Transparent">
            <StackPanel HorizontalAlignment="Stretch">
                <TextBlock Text="Rogue.NET" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="16"  Foreground="White" FontSize="42" />
                <coreView:Smiley Height="45" Width="30" SmileyLineBlur="1" SmileyLineThickness="2"  SmileyColor="Blue" SmileyLineColor="Yellow"  SmileyMood="Happy" SmileyRadius="5" />
                <TextBlock Text="{Binding Message}" HorizontalAlignment="Center" Foreground="White" Margin="10"/>
                <common:ProgressBar Value="{Binding Progress}" Value2="{Binding Progress}"  ValueMax="100"  TextOn="False" HeaderTextOn="False"  BarColor1="YellowGreen" Margin="30,0,30,0" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
