<UserControl x:Class="Rogue.NET.Scenario.Content.Views.Alteration.TransmuteAlterationEffectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <!-- Not a whole lot to say about this Alteration Effect   -->
        <!-- It's purpose is to provide a way to "try" to create   -->
        <!-- a product item; but the constituents of it's "secret" -->
        <!-- parameters I would think are usually not known. This  -->
        <!-- could be paraemterized so you could choose; but there -->
        <!-- aren't any use cases right now.                       -->
        
        <!-- Probability of Success -->
        <Grid Margin="4">
            <TextBlock Text="Probability of Success" Foreground="Tan" FontSize="18" HorizontalAlignment="Left" />
            <TextBlock Text="{Binding ProbabilityOfSuccess, StringFormat=F1}" FontSize="18" Foreground="White" HorizontalAlignment="Right" />
        </Grid>
    </StackPanel>
</UserControl>
