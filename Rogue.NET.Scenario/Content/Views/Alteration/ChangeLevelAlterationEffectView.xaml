<UserControl x:Class="Rogue.NET.Scenario.Content.Views.Alteration.ChangeLevelAlterationEffectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>

        <!-- IAlterationEffect.RogueName -->
        <Grid Margin="4">
            <TextBlock Foreground="Tan" FontStyle="Italic" FontSize="18" HorizontalAlignment="Right">
                <Run Text="{Binding RogueName}" />
                <Run Text=" Effect" />
            </TextBlock>
        </Grid>

        <!-- Level Change -->
        <Grid Margin="4">
            <TextBlock Text="Level Change" Foreground="Tan" FontSize="18" HorizontalAlignment="Left" />
            <TextBlock Text="{Binding LevelChange}" FontSize="18" Foreground="White" HorizontalAlignment="Right" />
        </Grid>

    </StackPanel>
</UserControl>
