                            <MultiBinding.ConverterParameter>
                                <system:Boolean>False</system:Boolean>
                            </MultiBinding.ConverterParameter>
                            <Binding Path="DefenseBase" />
                            <Binding Path="Defense" />
                        </MultiBinding>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>
        </Grid>

