                    <TextBlock.Text>
                        <MultiBinding Converter="{StaticResource CharacterStatsValueTextConverter}">
                            <MultiBinding.ConverterParameter>
                                <system:Boolean>True</system:Boolean>
                            </MultiBinding.ConverterParameter>                            
                            <Binding Path="FoodUsagePerTurnBase" />
