            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" >
                <TextBlock Text="{Binding FoodUsagePerTurnBase, StringFormat=F2}" Foreground="Beige" FontSize="20" VerticalAlignment="Center" />
