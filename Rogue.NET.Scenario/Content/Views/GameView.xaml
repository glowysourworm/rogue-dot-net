<UserControl x:Class="Rogue.NET.Scenario.Views.GameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Rogue.NET.Common.View;assembly=Rogue.NET.Common"
    xmlns:commonUtility="clr-namespace:Rogue.NET.Common.Utility;assembly=Rogue.NET.Common"
    Height="Auto" 
    Width="Auto" 
    xmlns:prism="http://www.codeplex.com/prism"
    xmlns:local="clr-namespace:Rogue.NET.Scenario.Views"
    Background="Black">
	<UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Scenario;component/Resources/Dictionaries/Game.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Dictionaries/ShinyButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Core;component/Resource/ShinySmileyButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
	</UserControl.Resources>
    <Border BorderThickness="2">
    	<Border.BorderBrush>
    		<RadialGradientBrush>
    			<GradientStop Color="Black" Offset="0.557"/>
    			<GradientStop Color="White" Offset="1"/>
    		</RadialGradientBrush>
    	</Border.BorderBrush>
		<Grid x:Name="LayoutRoot">
			<Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

            <Border BorderBrush="Gray" BorderThickness="0,0,0,0.75">
                <Grid>
                    <TextBlock Text="Rogue.NET" Foreground="White" FontSize="32" HorizontalAlignment="Left" Margin="8" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,14,0" HorizontalAlignment="Right">
                        <TextBlock Text="{x:Static commonUtility:ConstantStrings.Copyright}"  Margin="8" Grid.Column="3" Grid.Row="2" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" />
                        <Button x:Name="PreferncesButton" Tag="pack://application:,,,/Rogue.NET.Common;component/Resource/Images/Write.png" Background="Black" BorderBrush="White" HorizontalAlignment="Center" Click="PreferencesButton_Click" Margin="2" Style="{DynamicResource ShinyButtonStyle}" Width="32" Cursor="Hand" ToolTip="Command Preferences" Height="32" />
                        <Button x:Name="HelpButton" Tag="pack://application:,,,/Rogue.NET.Common;component/Resource/Images/Identify.png" Background="Black" BorderBrush="White" HorizontalAlignment="Center" Click="HelpButton_Click" Width="32" Style="{DynamicResource ShinyButtonStyle}" Height="32" Margin="2" Cursor="Hand" ToolTip="Help"/>
                        <Button x:Name="ObjectiveButton"  HorizontalAlignment="Center" Background="Black" BorderBrush="White" Foreground="Yellow" Click="ObjectiveButton_Click" Content="Button" Width="32" Style="{DynamicResource ShinySmileyButtonStyle}" Height="32" Margin="2" ToolTip="Objectives" Cursor="Hand"/>
                        <Button x:Name="ExitButton" Tag="pack://application:,,,/Rogue.NET.Common;component/Resource/Images/StairsUp.png" Background="Black" BorderBrush="White" HorizontalAlignment="Center" Click="ExitButton_Click" Margin="2" Width="32" Style="{DynamicResource ShinyButtonStyle}" Cursor="Hand" Height="32" ToolTip="Exit"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border x:Name="GameRegion" prism:RegionManager.RegionName="GameRegion" Margin="0, 10, 0, 0" Grid.Row="1" Background="Transparent" ScrollViewer.CanContentScroll="True" />

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="2">
                <common:DisappearingButton ImagePadding="10" Height="64" Width="64" Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Images/Normal.png" Grid.Row="3" Cursor="Hand" Threshold="100000" x:Name="GameButton" Click="GameViewButton_Click" Foreground="White" FontSize="24"  HorizontalAlignment="Left" Margin="8" VerticalAlignment="Center" />
                <common:DisappearingButton ImagePadding="10" Height="64" Width="64" Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Images/EquipmentGameDisplay.png" Grid.Row="3" Cursor="Hand" Threshold="100000" x:Name="EquipmentButton" Click="EquipmentButton_Click" Foreground="White" FontSize="24" HorizontalAlignment="Right" Margin="8" VerticalAlignment="Center" />
                <common:DisappearingButton ImagePadding="10" Height="64" Width="64" Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Images/Identify.png" Grid.Row="3" Cursor="Hand" Threshold="100000" x:Name="GameDictionaryButton" Click="GameDictionaryButton_Click" Foreground="White" FontSize="24" HorizontalAlignment="Right" Margin="8" VerticalAlignment="Center" />
            </StackPanel>

            <TextBlock x:Name="DialogTB" Text="{Binding DialogMessage, Delay=750, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:GameView}}}" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Foreground="Beige" FontSize="24" />
		</Grid>
	</Border>
</UserControl>
