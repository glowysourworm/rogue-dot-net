<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Rogue.NET.Scenario.Views"
    xmlns:common="clr-namespace:Rogue.NET.Common.Views;assembly=Rogue.NET.Common"
    x:Class="Rogue.NET.Scenario.Views.GameView"
    Height="Auto" Width="Auto" 
    xmlns:prism="http://www.codeplex.com/prism"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    Background="Black"
    mc:Ignorable="d" d:DesignWidth="906.313" d:DesignHeight="548.817">
	<UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resources/Dictionaries/Converters.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Scenario;component/Resources/Dictionaries/Game.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resources/Dictionaries/ShinyButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resources/Dictionaries/ShinySmileyButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
	</UserControl.Resources>
    <Border BorderThickness="2">
    	<Border.BorderBrush>
    		<RadialGradientBrush>
    			<GradientStop Color="Black" Offset="0.557"/>
    			<GradientStop Color="White" Offset="1"/>
    		</RadialGradientBrush>
    	</Border.BorderBrush>
		<Grid x:Name="LayoutRoot">
			<Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

            <Border BorderBrush="Gray" BorderThickness="0,0,0,0.75">
                <Grid>
                    <TextBlock Text="Rogue.NET" Foreground="White" FontSize="32" HorizontalAlignment="Left" Margin="8" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,14,0" HorizontalAlignment="Right">
                        <TextBlock Text="© 2016 - Rogue.NET Project"  Margin="8" Grid.Column="3" Grid.Row="2" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" />
                        <Button x:Name="PreferncesButton" Tag="pack://application:,,,/Rogue.NET.Common;component/Resources/Images/Write.png" Background="Black" BorderBrush="White" HorizontalAlignment="Center" Click="PreferencesButton_Click" Margin="2" Style="{DynamicResource ShinyButtonStyle}" Width="32" Cursor="Hand" ToolTip="Command Preferences" Height="32" />
                        <Button x:Name="HelpButton" Tag="pack://application:,,,/Rogue.NET.Common;component/Resources/Images/Identify.png" Background="Black" BorderBrush="White" HorizontalAlignment="Center" Click="HelpButton_Click" Width="32" Style="{DynamicResource ShinyButtonStyle}" Height="32" Margin="2" Cursor="Hand" ToolTip="Help"/>
                        <Button x:Name="ObjectiveButton"  HorizontalAlignment="Center" Background="Black" BorderBrush="White" Foreground="Yellow" Click="ObjectiveButton_Click" Content="Button" Width="32" Style="{DynamicResource ShinySmileyButtonStyle}" Height="32" Margin="2" ToolTip="Objectives" Cursor="Hand"/>
                        <Button x:Name="ExitButton" Tag="pack://application:,,,/Rogue.NET.Common;component/Resources/Images/StairsUp.png" Background="Black" BorderBrush="White" HorizontalAlignment="Center" Click="ExitButton_Click" Margin="2" Width="32" Style="{DynamicResource ShinyButtonStyle}" Cursor="Hand" Height="32" ToolTip="Exit"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border x:Name="GameInfoRegion" prism:RegionManager.RegionName="GameInfoRegion" Grid.Row="1" Background="Transparent" Margin="260, 10, 250, 10" />
            
            <Border x:Name="GameRegion" prism:RegionManager.RegionName="GameRegion" Grid.Row="2" Background="Transparent" ScrollViewer.CanContentScroll="True" />

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="3">
                <common:ImageButton ImagePadding="10" 
                                           Visibility="{Binding Level.IsPlayerOnShop, Converter={ StaticResource VisibilityConverter }}"
                                           Tag="{x:Type local:ShopCtrl}" 
                                           Height="64" 
                                           Width="64" 
                                           Source="pack://application:,,,/Rogue.NET.Common;component/Resources/Images/ShopGameDisplay.png" 
                                           Grid.Row="3" 
                                           Cursor="Hand" 
                                           x:Name="ShopViewButton" 
                                           Foreground="White" 
                                           FontSize="24" 
                                           HorizontalAlignment="Right" 
                                           Margin="8" VerticalAlignment="Center" />
                <common:ImageButton ImagePadding="10" Tag="{x:Type local:LevelView}" Height="64" Width="64" Source="pack://application:,,,/Rogue.NET.Common;component/Resources/Images/Normal.png" Grid.Row="3" Cursor="Hand" x:Name="GameButton" Foreground="White" FontSize="24"  HorizontalAlignment="Left" Margin="8" VerticalAlignment="Center" />
                <common:ImageButton ImagePadding="10" Tag="{x:Type local:EquipmentSelectionCtrl}" Height="64" Width="64" Source="pack://application:,,,/Rogue.NET.Common;component/Resources/Images/EquipmentGameDisplay.png" Grid.Row="3" Cursor="Hand" x:Name="EquipmentButton" Foreground="White" FontSize="24" HorizontalAlignment="Right" Margin="8" VerticalAlignment="Center" />
                <common:ImageButton ImagePadding="10" Tag="{x:Type local:DungeonEncyclopedia}" Height="64" Width="64" Source="pack://application:,,,/Rogue.NET.Common;component/Resources/Images/Identify.png" Grid.Row="3" Cursor="Hand" x:Name="GameDictionaryButton" Foreground="White" FontSize="24" HorizontalAlignment="Right" Margin="8" VerticalAlignment="Center" />
            </StackPanel>

            <TextBlock x:Name="DialogTB" Cursor="Hand" MouseDown="DialogTB_MouseDown" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3" Foreground="Beige" FontSize="24" />
		</Grid>
	</Border>
</UserControl>
