<UserControl x:Class="Rogue.NET.Scenario.Content.Views.DungeonEncyclopediaAttackAttributeCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Core;component/Resource/Converter.xaml" />
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Image Visibility="{Binding Converter={StaticResource AttackAttributeNonzeroConverter}}">
                <Image.Source>
                    <MultiBinding Converter="{StaticResource SymbolImageSourceConverter}">
                        <Binding Path="CharacterColor" />
                        <Binding Path="CharacterSymbol" />
                        <Binding Path="CharacterSymbolCategory" />
                        <Binding Path="CharacterScale" />
                        <Binding Path="Symbol" />
                        <Binding Path="SymbolHue" />
                        <Binding Path="SymbolSaturation" />
                        <Binding Path="SymbolLightness" />
                        <Binding Path="SymbolScale" />
                        <Binding Path="SymbolUseColorMask" />
                        <Binding Path="SmileyExpression" />
                        <Binding Path="SmileyAuraColor" />
                        <Binding Path="SmileyBodyColor" />
                        <Binding Path="SmileyLineColor" />
                        <Binding Path="GameSymbol" />
                        <Binding Path="SymbolType" />
                    </MultiBinding>
                </Image.Source>
            </Image>
            <TextBlock Text="{Binding RogueName}"  Visibility="{Binding Converter={StaticResource AttackAttributeNonzeroConverter}}" VerticalAlignment="Center" FontSize="14" Foreground="Beige" Margin="4">
            </TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Visibility="{Binding Attack, Converter={StaticResource AttackAttributeVibilityCollapsedConverter}}" 
                       VerticalAlignment="Center" 
                       FontSize="14" 
                       Foreground="Yellow" 
                       Margin="4">
                <Run Text="{Binding Attack, StringFormat=F1}" />
                <Run Text="A" />
            </TextBlock>
            <TextBlock Visibility="{Binding Resistance, Converter={StaticResource AttackAttributeVibilityCollapsedConverter}}" 
                       VerticalAlignment="Center" 
                       FontSize="14" 
                       Foreground="LightSteelBlue" 
                       Margin="4">
                <Run Text="{Binding Resistance, StringFormat=F1}" />
                <Run Text="R" />
            </TextBlock>
            <TextBlock Visibility="{Binding Weakness, Converter={StaticResource AttackAttributeVibilityCollapsedConverter}}" 
                       VerticalAlignment="Center" 
                       FontSize="14" 
                       Foreground="Red" 
                       Margin="4">
                <Run Text="{Binding Weakness, StringFormat=N0}" />
                <Run Text="W" />
            </TextBlock>            
        </StackPanel>
    </Grid>
</UserControl>
