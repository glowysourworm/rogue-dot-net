<UserControl x:Class="Rogue.NET.Scenario.Views.SkillGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:coreView="clr-namespace:Rogue.NET.Core.View;assembly=Rogue.NET.Core"
             xmlns:Dotway_WPF_Effects="clr-namespace:Dotway.WPF.Effects;assembly=Dotway.WPF.Effects">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Scenario;component/Resources/Dictionaries/ItemGrid.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Scenario;component/Resources/Dictionaries/SkillGrid.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Dictionaries/RadioButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Common;component/Resource/Dictionaries/ShinyTextButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Rogue.NET.Core;component/Resource/Converter.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- Skill Sets -->
    <ItemsControl ItemsSource="{Binding SkillSets}"
                      Grid.Row="2"
                      Margin="4">
        <ItemsControl.Template>
            <ControlTemplate>
                <!-- Have to add a scroll viewer for the items -->
                <ScrollViewer x:Name="ScrollViewer" Padding="{TemplateBinding Padding}" VerticalScrollBarVisibility="Auto">
                    <ItemsPresenter />
                </ScrollViewer>
            </ControlTemplate>
        </ItemsControl.Template>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border HorizontalAlignment="Stretch" Padding="2">
                    <Border.Background>
                        <MultiBinding Converter="{StaticResource BoolANDParameterConverter}"
                                      ConverterParameter="{StaticResource SkillGridWarningBrush}">
                            <Binding Path="HasLearnedUnavailableSkills" Converter="{StaticResource BoolInverseConverter}" />
                        </MultiBinding>
                    </Border.Background>

                    <!-- Gray out if Skill Set not yet learned -->
                    <Border.Effect>
                        <Dotway_WPF_Effects:GrayscaleEffect DesaturationFactor="{Binding HasLearnedSkills, Converter={StaticResource BoolIntConverter}}"/>
                    </Border.Effect>

                    <!-- Skill Set -->
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <!-- Activate Button -->
                        <RadioButton GroupName="ActivateGroup" Margin="4" Height="30" Width="30" Padding="2" Cursor="Hand" Grid.RowSpan="2"
                                     Visibility="{Binding HasLearnedSkills, Converter={StaticResource BoolVisibilityCollapseConverter}}"
                                     IsChecked="{Binding IsActive}" Command="{Binding ActivateSkillCommand}"
                                     Style="{StaticResource ShinyTextRadioButtonStyle}" VerticalAlignment="Center"
                                     Background="Black" BorderBrush="#AFFFFFFF">
                            
                            <!-- Symbol -->
                            <Image HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="20">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource ScenarioImageSourceMultiConverter}">
                                        <Binding Path="CharacterSymbol" />
                                        <Binding Path="CharacterColor" />
                                        <Binding Path="Icon" />
                                        <Binding Path="DisplayIcon" />
                                        <Binding Path="SmileyMood" />
                                        <Binding Path="SmileyBodyColor" />
                                        <Binding Path="SmileyLineColor" />
                                        <Binding Path="SmileyAuraColor" />
                                        <Binding Path="SymbolType" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                        </RadioButton>

                        <!-- Skill Selection Buttons -->
                        <Button FontFamily="{StaticResource FontAwesome}" FontSize="12" Cursor="Hand" Foreground="White" Background="Black"
                                Width="20" Height="20" Margin="2" Content="&#xf062;" Style="{StaticResource ShinyTextButtonStyle}" Grid.Column="1"
                                Command="{Binding ChangeSkillLevelUpCommand}"
                                Visibility="{Binding HasLearnedSkills, Converter={StaticResource BoolVisibilityCollapseConverter}}" />

                        <Button FontFamily="{StaticResource FontAwesome}" FontSize="12" Cursor="Hand" Foreground="White" Background="Black"
                                Width="20" Height="20" Margin="2" Content="&#xf063;" Style="{StaticResource ShinyTextButtonStyle}" Grid.Column="1" Grid.Row="1"
                                Command="{Binding ChangeSkillLevelDownCommand}"
                                Visibility="{Binding HasLearnedSkills, Converter={StaticResource BoolVisibilityCollapseConverter}}"/>

                        <!-- Symbol (No Learned Skills) -->
                        <Image HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4" Grid.RowSpan="2"
                                   Visibility="{Binding HasLearnedSkills, Converter={StaticResource BoolInverseVisibilityCollapseConverter}}">
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource ScenarioImageSourceMultiConverter}">
                                    <Binding Path="CharacterSymbol" />
                                    <Binding Path="CharacterColor" />
                                    <Binding Path="Icon" />
                                    <Binding Path="DisplayIcon" />
                                    <Binding Path="SmileyMood" />
                                    <Binding Path="SmileyBodyColor" />
                                    <Binding Path="SmileyLineColor" />
                                    <Binding Path="SmileyAuraColor" />
                                    <Binding Path="SymbolType" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>

                        <!-- Name / Selected Skill Name -->
                        <StackPanel Grid.Column="2" Grid.RowSpan="2" VerticalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Property="Foreground" Value="DodgerBlue" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                            <Setter Property="Foreground" Value="White" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Resources>
                            <TextBlock FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"
                                           Text="{Binding RogueName}" />

                            <TextBlock FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"
                                       Visibility="{Binding ActiveSkill, Converter={StaticResource NonNullVisibilityConverter}}">
                                    <Run Text="&#xf061;" FontFamily="{StaticResource FontAwesome}" FontSize="12" />
                                    <Run Text="{Binding ActiveSkill.Alteration.DisplayName}" />
                            </TextBlock>
                        </StackPanel>

                        <!-- Go-To Skill Screen -->
                        <Button Grid.RowSpan="2" Grid.Column="3"
                                Visibility="{Binding HasUnlearnedAvailableSkills, Converter={StaticResource BoolVisibilityCollapseConverter}}"
                                Command="{Binding ViewSkillsCommand}">
                            <Button.ToolTip>
                                <!-- Tooltip with Purple Smiley -->
                                <ToolTip IsEnabled="{Binding HasUnlearnedAvailableSkills, Converter={StaticResource BoolInverseConverter}}"
                                         Background="Transparent"
                                         BorderBrush="Transparent"
                                         Padding="0"
                                         Margin="0">
                                    <Border Background="Black" Padding="4" BorderBrush="Purple" BorderThickness="2" CornerRadius="8">
                                        <StackPanel Orientation="Horizontal">
                                            <coreView:Smiley VerticalAlignment="Center" SmileyColor="Purple" SmileyLineColor="Yellow" Margin="4,4,20,4" Width="20" Height="30" SmileyMood="Happy" SmileyRadius="3" SmileyLineThickness="1" />
                                            <TextBlock Text="Click to View Skill Detail" Foreground="LightSteelBlue" FontSize="12" Margin="4" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                </ToolTip>
                            </Button.ToolTip>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <TextBlock FontFamily="{StaticResource FontAwesome}" FontSize="20" Cursor="Hand" Foreground="LightSteelBlue"                                       
                                               HorizontalAlignment="Right" VerticalAlignment="Center" Text="&#xf06e;" />
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Lock-Button Gray -->
                        <TextBlock Grid.RowSpan="2" Grid.Column="3"
                                   Visibility="{Binding HasLearnedSkills, Converter={StaticResource BoolInverseVisibilityCollapseConverter}}"
                                   FontFamily="{StaticResource FontAwesome}" FontSize="20" Cursor="Hand" Foreground="LightGray"                                       
                                   HorizontalAlignment="Right" VerticalAlignment="Center" Text="&#xf023;">
                            <TextBlock.ToolTip>
                                <!-- Tooltip with Gray Smiley -->
                                <ToolTip IsEnabled="{Binding HasLearnedSkills, Converter={StaticResource BoolInverseConverter}}"
                                         Background="Transparent"
                                         BorderBrush="Transparent"
                                         Padding="0"
                                         Margin="0">
                                    <Border Background="Black" Padding="4" BorderBrush="LightGray" BorderThickness="2" CornerRadius="8">
                                        <StackPanel Orientation="Horizontal">
                                            <coreView:Smiley VerticalAlignment="Center" SmileyColor="Black" SmileyLineColor="LightGray" Margin="4,4,20,4" Width="20" Height="30" SmileyMood="Happy" SmileyRadius="4" SmileyLineThickness="1" />
                                            <TextBlock Text="Skill is currently locked" Foreground="LightGray" FontSize="18" Margin="4" />
                                        </StackPanel>
                                    </Border>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>

                    </Grid>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>

</UserControl>
