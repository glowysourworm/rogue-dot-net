                        <!-- Objective Acheived -->
                        <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                            <Setter TargetName="RefractionLayer" Property="Fill">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5,1.0" RadiusX="1.2">
