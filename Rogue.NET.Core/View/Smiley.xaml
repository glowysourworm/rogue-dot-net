<UserControl    x:Class="Rogue.NET.Core.View.Smiley"
	            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Canvas x:Name="SmileyCanvas">
        
        <Rectangle x:Name="BodyRectangle" 
                   Stroke="Black" 
                   Fill="Yellow" />

        <Path      x:Name="LeftEyePath"
                   Stroke="Black"                   
                   Fill="Transparent" />

        <Path      x:Name="RightEyePath"
                   Stroke="Black"
                   Fill="Transparent" />

        <Path      x:Name="MouthPath"
                   Stroke="Black"
                   Fill="Transparent" />

    </Canvas>
</UserControl>